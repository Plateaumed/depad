{
 "compilerOptions": {
   "module": "commonjs",
   "declaration": true,
   "emitDecoratorMetadata": true,
   "esModuleInterop": true,
   "experimentalDecorators": true,
   "noImplicitAny": false,
   "noLib": false,
   "removeComments": true,
   "sourceMap": true,
   "target": "es6",
   "lib": [
     "es6"
   ]
 },
 "exclude": [
   "**/*/node_modules",
   "**/*/__mocks__",
   "**/*.spec.ts",
   "**/*.test.ts",
   "**/*.spec.js",
   "**/*.test.js"
 ]
}